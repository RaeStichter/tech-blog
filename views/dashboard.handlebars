<section>
    <h2>Create A New Post</h2>
    <hr>

    <form class="new-post-form">
        <div class="mb-3">
            <label for="post-title">Title</label>
            <input type="text" class= "form-control" id="post-title" name="post-title" />
        </div>
        <div class="mb-3">
            <label for="post-body">Body</label>
            <input type="text" class= "form-control input-large" id="post-body" name="post-body" />
        </div>
        <button type="submit" class="btn btn-dark">Create</button>
    </form>
</section>

{{#if posts.length}}
<section>
    <h3>Your Posts</h3>
    <hr>
    <ol>
        {{#each posts as |post|}}
        <li>
            {{> post-info post}}
            <a href="/dashboard/edit/{{post.id}}" class="edit-link">Edit post</a>
        </li>
        {{/each}}
    </ol>
</section>
{{/if}}
    

<script src="/javascript/add-post.js"></script>